<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_order_number"
        android:hint="Customers Order Number"
        android:layout_alignBaseline="@+id/tv_order_number"
        android:layout_alignBottom="@+id/tv_order_number"
        android:layout_toEndOf="@+id/tv_order_number"
        android:layout_marginStart="18dp" />

    <TextView
        android:text="Order Number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="38dp"
        android:id="@+id/tv_order_number"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:ems="10"
        android:layout_below="@+id/et_order_number"
        android:layout_alignEnd="@+id/et_order_number"
        android:id="@+id/et_username" />

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_order_number"
        android:layout_alignStart="@+id/tv_order_number"
        android:layout_marginTop="11dp"
        android:id="@+id/tv_username" />

    <Button
        android:text="Pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_username"
        android:layout_alignStart="@+id/tv_username"
        android:layout_marginStart="37dp"
        android:layout_marginTop="15dp"
        android:id="@+id/btn_pay" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_pay"
        android:layout_toEndOf="@+id/btn_pay"
        android:layout_marginStart="24dp"
        android:id="@+id/btn_cancel" />
</RelativeLayout>